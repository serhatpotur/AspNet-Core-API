@model IEnumerable<CategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">Kategoriler</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Kategori Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.CategoryID</td>
                <td> @item.CategoryName</td>
                <td>
                    @* update/1 *@
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CategoryID">Sil </a>
                    <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@item.CategoryID">Güncelle</a>
                </td>
            </tr>

            }

        </tbody>
    </table>

